/* ==========================================================================
Mixins (always mixedCase)
========================================================================== */
.roundedCorners (@radius: 5px) {
    -webkit-border-radius: @radius;
    -moz-border-radius: @radius;
    -ms-border-radius: @radius;
    -o-border-radius: @radius;
    border-radius: @radius;
}

.boxShadow (@x: 0; @y: 0; @blur: 1px; @color: rgba(0,0,0,0.3)) {
    -moz-box-shadow: @arguments;
    -webkit-box-shadow: @arguments;
    box-shadow: @arguments;
}
.textShadow (@string: 0 1px 3px rgba(0, 0, 0, 0.25)) {
    text-shadow: @string;
}
.listComma {
    display: inline;
    list-style: none;
    padding: 0;
    li {
        display: inline;
    }
    li:after {
        content: ", ";
    }
    li:last-child:after {
        content: "";
    }
}
/* ==========================================================================
Utilities
========================================================================== */

@emInPx: 16;    // 16px per em (global default)
@emInPt: 11.955168;

.pxToEm(@selector, @amt, @emInPx: @emInPx) when (ispixel(@amt))
{
    @{selector}: unit((@amt / @emInPx), em);
}
.ptToEm(@selector, @amt, @emInPt: @emInPt)
{
    @{selector}: unit((@amt / @emInPt), em);
}

